<h1>Create a new figure!</h1>

<form action="/figures" method="post">

  <label>Figure name:</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br></br>

  <label>Title(s):</label>
  <label>Choose from existing:</label>
  <% @titles.each do |title|%>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%=title.id%>"> <br>
  <% end %>
  <br></br>

  <label>and/or create a new title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br></br>


  <label> Landmark(s): </label>
  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <br>
  <% end %>


  <label>and/or create a new landmark:</label>
  <label>Landmark name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <label>Year completed:</label>
  <input type="text" name="landmark[year_completed]">
  <br></br>

  <input type="submit" value="Create New Figure">

</form>
